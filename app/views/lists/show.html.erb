<div class="banner banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @list.photo.key, crop: :fill %>);">
  <h1>Movies in the list "<%= @list.name %>"</h1>
    <%= link_to new_list_bookmark_path(@list), class:"btn btn-flat btn-main mt-3" do %>
      Add a movie to <%= @list.name %>
    <% end %>
</div>

<div class="cards">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="movie-card" style='background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path "#{bookmark.movie.poster_url}" %>);'>
      <div class="movie-details">
        <h2 class="mt-4"><%= bookmark.movie.title %></h2>
        <p class="movie-overview"><%= bookmark.movie.overview %></p>
        <p class="movie-rating"><%= bookmark.movie.rating %> <i class="fas fa-star"></i></p>
        <%= link_to bookmark_path(bookmark),
        method: :delete,
        class: 'delete-btn',
        data: { confirm: "Are you sure you want to delete #{bookmark.movie.title} from #{@list.name}?" } do %>
          <i class="fas fa-times"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
